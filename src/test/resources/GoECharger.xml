<Appliances xmlns="http://github.com/camueller/SmartApplianceEnabler/v1.4">
    <Appliance id="F-00000001-000000000003-00">
        <ElectricVehicleCharger startChargingStateDetectionDelay="0">
            <EVHttpControl contentType="json">
                <HttpRead url="http://127.0.0.1:8999/status">
                    <HttpReadValue name="VehicleNotConnected" path="$.car" extractionRegex="(1)"/>
                    <HttpReadValue name="VehicleConnected" path="$.car" extractionRegex="(3)"/>
                    <HttpReadValue name="Charging" path="$.car" extractionRegex="(2)"/>
                    <HttpReadValue name="ChargingCompleted" path="$.car" extractionRegex="(4)"/>
                    <HttpReadValue name="Error" path="$.err" extractionRegex="([^0])"/>
                </HttpRead>
                <HttpWrite url="http://127.0.0.1:8999/mqtt=">
                    <HttpWriteValue name="ChargingCurrent" value="amp={}" type="QueryParameter" method="GET"/>
                    <HttpWriteValue name="StartCharging" value="alw=1" type="QueryParameter" method="GET"/>
                    <HttpWriteValue name="StopCharging" value="alw=0" type="QueryParameter" method="GET"/>
                </HttpWrite>
            </EVHttpControl>
            <ElectricVehicle id="1" name="Nissan Leaf" batteryCapacity="40000" phases="1" maxChargePower="10000" chargeLoss="20" defaultSocManual="100" defaultSocOptionalEnergy="90">
                <SocScript script="/home/axel/IdeaProjects/SmartApplianceEnabler/src/test/soc.sh" extractionRegex=".*is (\d*.{0,1}\d+).*"/>
            </ElectricVehicle>
            <ElectricVehicle id="2" name="Tesla Model S" batteryCapacity="80000"/>
        </ElectricVehicleCharger>
    </Appliance>
</Appliances>
